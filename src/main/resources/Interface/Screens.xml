<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="menu" controller="edu.chalmers.notenoughspace.view.Menu">
        <layer id="background" childLayout="center">
            <image filename="Textures/space.jpg" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="50%" width="75%" align="center" childLayout="center">
                <image filename="Textures/title.png" align="center" valign="center" height="20%" width="70%"></image>
            </panel>
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" >
            <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">
                <image filename="Textures/button.png" label="Start" id="StartButton" align="center" valign="center"
                       height="80%" width="80%" visibleToMouse="true" >
                    <interact onClick="startButtonClicked(hud)"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                        <onHover name="border" post="true" color="999f" border="2px"/>
                    </effect>
                </image>
            </panel>
            <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">
                <image filename="Textures/quitbutton.png" label="Start" id="StartButton" align="center" valign="center"
                       height="80%" width="80%" visibleToMouse="true" >
                    <interact onClick="quitButtonClicked()"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                        <onHover name="border" post="true" color="999f" border="2px"/>
                    </effect>
                </image>
            </panel>
            </panel>
        </layer>
    </screen>
    <screen id="hud" controller="edu.chalmers.notenoughspace.view.Round">
        <layer id = "foreground" childLayout="vertical" valign="top" align="center">
            <panel id="panel_top" align="center" childLayout="horizontal">
                <text text="CowCount" font="Interface/Fonts/Default.fnt" width="10%" height="75%" backgroundColor="#ffff"/>
                <text text="Timer" font="Interface/Fonts/Default.fnt" width="10%" height="100%" />
                <text text="CowCount" font="Interface/Fonts/Default.fnt" width="10%" height="75%" />
            </panel>
        </layer>
    </screen>
    <screen id="paused" controller="edu.chalmers.notenoughspace.view.Paused">
        <layer childLayout="center">
            <text text="Pause" font="Interface/Fonts/Default.fnt" width="10%" height="75%" backgroundColor="#ffff" />
        </layer>
    </screen>
</nifty>
