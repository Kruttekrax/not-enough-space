<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="menu" controller="edu.chalmers.notenoughspace.view.Menu">
        <layer id="background" childLayout="center">
            <image filename="Textures/space.jpg" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="50%" width="75%" align="center" childLayout="center">
                <image filename="Textures/title.png" align="center" valign="center" height="20%" width="70%"></image>
            </panel>
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" >
            <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">
                <image filename="Textures/button.png" label="Start" id="StartButton" align="center" valign="center"
                       height="80%" width="80%" visibleToMouse="true" >
                    <interact onClick="startButtonClicked()"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                        <onHover name="border" post="true" color="999f" border="2px"/>
                    </effect>
                </image>
            </panel>
            <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">
                <image filename="Textures/quitbutton.png" label="Quit" id="QuitButton" align="center" valign="center"
                       height="80%" width="80%" visibleToMouse="true" >
                    <interact onClick="quitButtonClicked()"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                        <onHover name="border" post="true" color="999f" border="2px"/>
                    </effect>
                </image>
            </panel>
            </panel>
        </layer>
    </screen>
    <screen id="hud" controller="edu.chalmers.notenoughspace.view.Round">
        <layer childLayout="vertical" valign="top" align="center">
            <panel id="panel_top" align="center" width="25%" height="15%" childLayout="horizontal">
                <text id="cowCount" text="cowCount" font="Interface/Fonts/Default.fnt" width="33%" height="75%" backgroundColor="#1111"/>
                <text id="timer" font="Interface/Fonts/Default.fnt" width="33%" height="100%" backgroundColor="#1111"/>
                <text id="weightCount" font="Interface/Fonts/Default.fnt" width="33%" height="75%" backgroundColor="#1111"/>
            </panel>
        </layer>
        <layer childLayout="vertical" valign="top" align="right">
            <panel id="health_and_energy" align="right" width="25%" height="15%" childLayout="horizontal">
                <!--<text id="health" text="Health" font="Interface/Fonts/Default.fnt" width="33%" height="75%" backgroundColor="#1111"/>
                <text id="energy" text="Energy" font="Interface/Fonts/Default.fnt" width="33%" height="75%" backgroundColor="#1111"/>-->
                <text id="health" text="Health:" font="Interface/Fonts/Default.fnt" width="15%" height="100%" backgroundColor="#1111"/>
                <control name="healthMeter" align="center" valign="center" width="400px" height="32px" />
            </panel>
        </layer>
        <layer childLayout="horizontal" valign="bottom" align="left">
            <panel id="storage_panel" align="left" valign="bottom" width="10%" height="25%" childLayout="vertical">
                <text text="Storage" font="Interface/Fonts/Default.fnt"/>
                <image filename="Icons/cow.jpg" width="100%" height="50%"/>
                <image filename="Icons/junk.jpg" width="100%" height="50%"/>
            </panel>
        </layer>
        <layer id="pauseMenu" visible="false" childLayout="center">
            <panel id="panel-top" height="100%" width="100%"  backgroundColor="#000" childLayout="center">
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" >
            <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">
                <image filename="Textures/restartButton.jpeg" label="Start" id="StartButton" align="center" valign="center"
                       height="80%" width="80%" visibleToMouse="true" >
                    <interact onClick="setEnabled(true)"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                        <onHover name="border" post="true" color="999f" border="2px"/>
                    </effect>
                </image>
            </panel>
            <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">
                <image filename="Textures/quitbutton.png" label="Quit" id="QuitButton" align="center" valign="center"
                       height="80%" width="80%" visibleToMouse="true" >
                    <interact onClick="quitButtonClicked()"/>
                    <effect>
                        <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                        <onHover name="border" post="true" color="999f" border="2px"/>
                    </effect>
                </image>
            </panel>
            </panel>
            </panel>
        </layer>
    </screen>
    <style id="nifty-listbox-item" base="nifty-label">
    <attributes color="#000f" width="100%" align="left" textVAlign="center" textHAlign="left" />
    <interact onClick="listBoxItemClicked()" />
    <effect>
        <onCustom customKey="focus" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
        <onCustom customKey="select" name="colorBar" post="false" color="#444f" neverStopRendering="true" timeType="infinite" />
        <onCustom customKey="select" name="textColor" post="false" color="#fc0f" neverStopRendering="true" timeType="infinite" />
        <onHover name="colorBar" color="#444f" post="false" neverStopRendering="true" timeType="infinite" inset="1px"/>
        <onClick name="focus" targetElement="#parent#parent"/>
    </effect>
    </style>
    <screen id="highscore" controller="edu.chalmers.notenoughspace.view.Menu">
        <layer id="background" childLayout="center">
                        <image filename="Textures/space.jpg" height="100%" width="100%"></image>
        </layer>
        <layer id="foreground" childLayout="center">
                    <panel id="panel_top" height="50%" width="75%" align="center" childLayout="vertical">
                        <text text="High Score" font="Interface/Fonts/Default.fnt"/>
                        <text text="Player: ${CALL.getPlayerName()}       Score: ${CALL.getPlayerScore()}" font="Interface/Fonts/Default.fnt"/>
                    </panel>
                    <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal" >
                    <panel id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">
                        <image filename="Textures/playAgainButton.jpg" label="PlayAgain" id="PlayAgainButton" align="center" valign="center"
                               height="80%" width="80%" visibleToMouse="true" >
                            <interact onClick="startButtonClicked()"/>
                            <effect>
                                <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                                <onHover name="border" post="true" color="999f" border="2px"/>
                            </effect>
                        </image>
                    </panel>
                    <panel id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">
                    <image filename="Textures/quitbutton.png" label="Quit" id="QuitButton" align="center" valign="center"
                           height="80%" width="80%" visibleToMouse="true" >
                        <interact onClick="quitButtonClicked()"/>
                        <effect>
                            <onHover name="pulsate" scaleFactor="0.008" endColor="#fff5" overlay="true" post="true"/>
                            <onHover name="border" post="true" color="999f" border="2px"/>
                        </effect>
                    </image>
                    </panel>
                    </panel>
        </layer>
        </screen>

        <controlDefinition name = "healthMeter" controller = "edu.chalmers.notenoughspace.view.Round">
            <image filename="Interface/border.png" childLayout="absolute"
                   imageMode="resize:15,2,15,15,15,2,15,2,15,2,15,15">
                <image id="healthBar" x="0" y="0" filename="Interface/inner.png" width="32px" height="100%"
                       imageMode="resize:15,2,15,15,15,2,15,2,15,2,15,15" />
            </image>
        </controlDefinition>

        </nifty>

